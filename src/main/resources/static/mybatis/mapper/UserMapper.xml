<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fpt.vanguard.mapper.mybatis.UserMapper">

    <resultMap id="UserResultMap" type="User">
        <id property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="enabled" column="enabled"/>

        <association property="role" javaType="Role">
            <id property="roleId" column="role_id"/>
            <result property="roleName" column="role_name"/>
            <result property="roleDesc" column="role_description"/>
        </association>
    </resultMap>

    <resultMap id="UserRoleResultMap" type="User">
        <id property="userId" column="id"/>
        <result property="userName" column="username"/>
        <result property="password" column="password"/>
    </resultMap>

    <sql id="ColumnUser">
        u.user_id
        , u.user_name
        , u.password
        , u.email
        , u.enabled
    </sql>

    <sql id="ColumnRole">
        r.role_id
        , r.role_name
        , r.role_description
    </sql>

    <select id="findByUsername" resultMap="UserResultMap">
        SELECT
            <include refid="ColumnUser"/>,
            <include refid="ColumnRole"/>
        FROM "user" u
        LEFT JOIN role r ON u.role_id = r.role_id
        <where>
            user_name = #{userName}
        </where>
    </select>

    <select id="findAll" resultMap="UserResultMap">
        SELECT
            <include refid="ColumnUser"/>,
            <include refid="ColumnRole"/>
        FROM "user" u
        LEFT JOIN role r ON u.role_id = r.role_id
    </select>

    <select id="findByRoleId" resultMap="UserRoleResultMap">
        SELECT
            <include refid="ColumnUser"/>,
            <include refid="ColumnRole"/>
        FROM "user" u
        LEFT JOIN role r ON u.role_id = r.role_id
        <where>
            role_id = #{roleId}
        </where>
    </select>
</mapper>